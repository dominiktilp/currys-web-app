body {
  margin 0
  padding 0
  font-family sans-serif
}

.container {
  display flex
  width 100vw
  height 100vh
  flex-direction column
}

.header {
  background: #CCC
  text-align: center
  width: 100%
  img {
    max-height: 40px
  }
}

.body {
  flex-grow 1
  padding 1em
}

a {
  color: black
  text-decoration: none
}


.universe-select {
  background: #CCC
  padding: 10px 15px
  margin: 10px 0


  .text-wrapper {
    font-size: 1.1rem
    display: inline
  }

  .caret {
    display: inline
    font-size: 1.4rem
    float: right
  }
}

div {
  box-sizing: border-box;
}

input {
  line-height 2em
}

.button {
  display inline-block
  color #fff
  background-color #A4A7A9
  padding 1em 1.5em
  margin-top 1em
  text-decoration none
  text-align center
  &:hover {
    text-decoration none
  }
  &.active {
    background-color #0080CC
    &:hover {
      text-decoration underline
    }
  }
}

.back-button {
  background: #eee;
  padding: 0.5rem 1rem;
  display: inline-block;
  margin: 10px 0 0 10px;
}

#top-bar {
  background: #dedede
  h1 {
    font-size 1.5em
    text-align center
    color #333333
  }
}

#bottom-bar {
  margin-top 3em
  display flex
  width 100%
  height 3em
  &>a {
    display block
    flex-grow 1
    margin-top 0
  }
}

.productImage {
  width: 100%;
  text-align: center;
  margin: 30px 0px;
  img {
    max-height: 40vh
  }
}

.productInfo {
  width: 100%;
  background: #ebebeb;
  padding: 10px 15px;
  margin: 15px 0px;
  h1 {
    font-size: 1.6rem;
    margin-bottom: 0.3rem
  }
  .productId {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }
  .productPrice {
    font-size: 1.6rem;
    color: #c90404;
    font-weight: bold
  }
}
.productDescription {
  padding: 10px 15px;
  margin: 15px 0px;
  &.firstParagraph {
    font-size: 1.1em;
  }
}
.productFeatures {
  background: #ebebeb;
  font-size: 1.1em;
  margin: 0;
  padding: 20px 0px;
  border: 1px solid #488020;
  border-left-width: 0;
  border-right-width: 0;
  color: #488020
}

.productItem {
  display: flex;
  flex-direction row
  align-items: center;
  margin-bottom: 20px
  border-bottom: 1px solid #488020
  .productItemImage {
    grow: 1
    padding: 10px
    img {
      width: 40vw
    }
  }
  .productItemInfo {
    grow: 2
    padding: 0 15px
    h2 {
      font-size: 1.1rem;
    }
    .productPrice {
      font-size: 1.2rem;
      color: #c90404;
      font-weight: bold
      margin: 15px 0
    }
    .productId {
      font-size: 0.8rem;
    }
    .actionButton {
      background: #c90404;
      color: white;
      padding: 0.5rem 1rem;
      display: inline-block;
      margin-bottom: 10px
    }
  }
}
