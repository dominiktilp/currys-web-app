body {
  margin 0
  padding 0
  font-family sans-serif
}

.container {
  display flex
  width 100vw
  height 100vh
  flex-direction column
}

.header {
  background: #CCC
  text-align: center
}

.body {
  flex-grow 1
  padding 1em
}

a {
  color: black
  text-decoration: none
}


.universe-select {
  background: #CCC
  padding: 2rem
  margin: 2rem 0 0 0


  .text-wrapper {
    font-size: 3rem
    display: inline
  }

  .caret {
    display: inline
    font-size: 3rem
    float: right
  }
}

input {
  line-height 2em
}

.button {
  display inline-block
  color #fff
  background-color #A4A7A9
  padding 1em 1.5em
  margin-top 1em
  text-decoration none
  text-align center
  &:hover {
    text-decoration none
  }
  &.active {
    background-color #0080CC
    &:hover {
      text-decoration underline
    }
  }
}

#top-bar {
  background: #dedede
  h1 {
    font-size 1.5em
    text-align center
    color #333333
  }
}

#bottom-bar {
  margin-top 3em
  display flex
  width 100%
  height 3em
  &>a {
    display block
    flex-grow 1
    margin-top 0
  }
}
